<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBanding"
        android:layout_width="200sp"
        android:layout_height="55sp"
        android:background="@drawable/btn_bandingkan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAjukan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAjukan"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="350sp"
        android:layout_height="190sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button14Back"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnAjukan"
        android:layout_width="200sp"
        android:layout_height="55sp"
        android:background="@drawable/btn_ajukan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBanding"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="16dp"
        android:text="@string/ctbc_judul"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView33" />

    <TextView
        android:id="@+id/tvDetailSkb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bunga_ctbc"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvDetailTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailTitle" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409sp"
        android:layout_height="50sp"
        android:layout_marginTop="32sp"
        android:background="@drawable/line_ulasan"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailSkb">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="35sp"
            android:layout_height="42sp"
            android:layout_weight="1"
            android:paddingTop="7sp"
            android:paddingBottom="5sp"
            app:srcCompat="@drawable/axa_rating" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ctbc_rating" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="11sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:text="@string/ctbc_ulasan"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <Button
        android:id="@+id/button14Back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="97sp"
        android:layout_height="26sp"
        android:layout_marginStart="24sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv11"
        android:layout_width="328sp"
        android:layout_height="27sp"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="152sp"
        android:maxLines="1"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailDesc"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="79sp"
        android:layout_height="21sp"
        android:text="Lanjut.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv11">

    </TextView>

    <TextView
        android:id="@+id/tvDetailDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8sp"
        android:text="Deskripsi"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pertahun"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvDetailSkb"
        app:layout_constraintTop_toTopOf="@+id/tvDetailSkb" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jumlah_pinjaman"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvDetailSkb"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailSkb" />

    <TextView
        android:id="@+id/tvPembiayaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:text="@string/pembiayaan"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>