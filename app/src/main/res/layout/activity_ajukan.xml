<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.AjukanActivity">

    
    <Button
        android:id="@+id/buttonPengajuan"
        android:layout_width="wrap_content"
        android:layout_height="55sp"
        android:background="@drawable/btn_ajukan2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jmlpinjaman_ajukan"
        app:layout_constraintVertical_bias="1.0" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderViewAjukan"
        android:layout_width="350sp"
        android:layout_height="205dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/hero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBack">

        <ImageView
            android:id="@+id/imgSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.smarteist.autoimageslider.SliderView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/dbs_judul"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderViewAjukan" />

    <Button
        android:id="@+id/buttonBack"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="92sp"
        android:layout_height="26sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_back2"
        app:layout_constraintEnd_toEndOf="@+id/sliderViewAjukan"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nama "
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/nama_ajukan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/nama_ajukan"
        android:layout_width="355dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Telepon"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/nomor_tajukan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_ajukan"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/nomor_tajukan"
        android:layout_width="355dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama_ajukan" />

    <EditText
        android:id="@+id/ttl_ajukan"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:background="@drawable/text_box"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="@+id/nomor_tajukan"
        app:layout_constraintStart_toEndOf="@+id/tempat_ajukan"
        app:layout_constraintTop_toTopOf="@+id/tempat_ajukan" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempat Tanggal Lahir"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/nomor_tajukan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomor_tajukan"
        app:layout_constraintTop_toBottomOf="@+id/nomor_tajukan" />

    <TextView
        android:id="@+id/tempat_ajukan"
        android:layout_width="192sp"
        android:layout_height="35sp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/nomor_tajukan"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota Domisili"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tempat_ajukan"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="@+id/tempat_ajukan"
        app:layout_constraintTop_toBottomOf="@+id/tempat_ajukan" />

    <EditText
        android:id="@+id/kota_ajukan"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penghasilan Sebulan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/kota_ajukan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/kota_ajukan"
        app:layout_constraintTop_toBottomOf="@+id/kota_ajukan" />

    <EditText
        android:id="@+id/penghasilan_ajukan"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Pinjaman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/penghasilan_ajukan" />

    <EditText
        android:id="@+id/jmlpinjaman_ajukan"
        android:layout_width="355sp"
        android:layout_height="35sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>